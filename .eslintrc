{
  "extends": ["standard", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "jest": true,
    "browser": true
  },
  "rules": {
    "space-before-function-paren": "off",
    "no-useless-escape": "off",
    "no-unused-vars": "off",
    "no-throw-literal": "off",
    "linebreak-style": "off",
    "no-useless-call": "off",
    "standard/no-callback-literal": "off"
  }
}
